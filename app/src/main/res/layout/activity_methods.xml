<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.additionalActivities.PMIChoice.MethodsActivity">

    <EditText
        android:id="@+id/progTestPmi"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Испытание выполнения требований к программной документации"
        android:inputType="textMultiLine|textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/funcTestPmi"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Испытание выполнения требований к функциональным характеристикам"
        android:inputType="textMultiLine|textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progTestPmi" />

    <EditText
        android:id="@+id/interfaceTestPmi"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Испытание выполнения требований к интерфейсу"
        android:inputType="textMultiLine|textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/funcTestPmi" />

    <Button
        android:onClick="saveMethodsPmi"
        android:backgroundTint="@color/main"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:id="@+id/saveMethodsPmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Сохранить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/robTestPmi"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Испытание выполнения требований к надёжности"
        android:inputType="textMultiLine|textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interfaceTestPmi" />
</androidx.constraintlayout.widget.ConstraintLayout>